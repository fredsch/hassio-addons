{
  "name": "Bayrol Poolaccess MQTT",
  "description": "Use this add-on to retrieve your Bayrol Automatic Salt in Home Assistant",
  "url": "https://github.com/tdenolle/bayrol-poolaccess-mqtt.git",
  "version": "1.0.0",
  "slug": "bayrol-poolaccess-mqtt",
  "services": [
	"mqtt:need"
  ],
  "udev": true,
  "uart": true,
  "environment": {
	"HASSIO_ADDON": "true"
  },
  "arch": [
	"aarch64",
	"amd64",
	"armhf",
	"armv7",
	"i386"
  ],
  "panel_icon": "mdi:console",
  "panel_title": "Bayrol Poolaccess MQTT Bridge",
  "options": {},
  "schema": {
	"LOG_LEVEL": "list(DEBUG|INFO|ERROR)",
	"DEVICE_TOKEN": "str",
	"DEVICE_SERIAL": "str",
	"HASS_DISCOVERY_PREFIX": "str",
	"MQTT_BASE_TOPIC": "str",
	"MQTT_URL": "str",
	"MQTT_USER": "str?",
	"MQTT_PASSWORD": "password?"
  }
}
